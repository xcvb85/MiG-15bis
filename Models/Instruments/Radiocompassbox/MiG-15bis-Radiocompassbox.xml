  <animation>
    <type>knob</type>
    <object-name>RC_TSelector</object-name>
    <property>fdm/jsbsim/systems/instr/ARK-5/switch/mode</property>
    <interpolation>
      <entry><ind>0</ind><dep>-45</dep></entry>
      <entry><ind>1</ind><dep>-15</dep></entry>
      <entry><ind>2</ind><dep>15</dep></entry>
      <entry><ind>3</ind><dep>45</dep></entry>
    </interpolation>
    <center>
      <x-m>0.151</x-m>
      <y-m>0.132</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>0.0</y>
      <z>-1</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>fdm/jsbsim/systems/instr/ARK-5/switch/mode</property>
        <factor>1</factor>
        <min>0</min>
        <max>3</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>RC_FSelector</object-name>
    <property>fdm/jsbsim/systems/instr/ARK-5/switch/band</property>
    <interpolation>
      <entry><ind>0</ind><dep>-90</dep></entry>
      <entry><ind>1</ind><dep>0</dep></entry>
      <entry><ind>2</ind><dep>90</dep></entry>
    </interpolation>
    <center>
      <x-m>0.059</x-m>
      <y-m>0.063</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>0.0</y>
      <z>-1</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>fdm/jsbsim/systems/instr/ARK-5/switch/band</property>
        <factor>1</factor>
        <min>0</min>
        <max>2</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>RC_FICPlate</object-name>
    <property>fdm/jsbsim/systems/instr/ARK-5/switch/band</property>
    <interpolation>
      <entry><ind>0</ind><dep>-90</dep></entry>
      <entry><ind>1</ind><dep>0</dep></entry>
      <entry><ind>2</ind><dep>90</dep></entry>
    </interpolation>
    <center>
      <x-m>0.059</x-m>
      <y-m>0.063</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>0.0</y>
      <z>1</z>
    </axis>
  </animation>

  <animation>
    <type>select</type>
    <object-name>RC_FP150x310</object-name>
    <condition>
      <equals>
        <property>fdm/jsbsim/systems/instr/ARK-5/switch/band</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>RC_FP150x310</object-name>
    <property>fdm/jsbsim/systems/instr/ARK-5/pot/tuning</property>
    <factor>180.5</factor>
    <offset-deg>-20.0</offset-deg>
    <center>
      <x-m>0.059</x-m>
      <y-m>0.063</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>0.0</y>
      <z>1</z>
    </axis>
  </animation>

  <animation>
    <type>select</type>
    <object-name>RC_FP310x640</object-name>
    <condition>
      <equals>
        <property>fdm/jsbsim/systems/instr/ARK-5/switch/band</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>RC_FP310x640</object-name>
    <property>fdm/jsbsim/systems/instr/ARK-5/pot/tuning</property>
    <factor>166.5</factor>
    <offset-deg>4.5</offset-deg>
    <center>
      <x-m>0.059</x-m>
      <y-m>0.063</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>0.0</y>
      <z>1</z>
    </axis>
  </animation>

  <animation>
    <type>select</type>
    <object-name>RC_FP640x1300</object-name>
    <condition>
      <equals>
        <property>fdm/jsbsim/systems/instr/ARK-5/switch/band</property>
        <value>2</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>RC_FP640x1300</object-name>
    <property>fdm/jsbsim/systems/instr/ARK-5/pot/tuning</property>
    <factor>330.0</factor>
    <offset-deg>-30.0</offset-deg>
    <center>
      <x-m>0.059</x-m>
      <y-m>0.063</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>0.0</y>
      <z>1</z>
    </axis>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>RC_FIVBUp</object-name>
    <object-name>RC_FIVBDown</object-name>
    <object-name>RC_FIVRod</object-name>
    <object-name>RC_FIVern</object-name>
    <property>fdm/jsbsim/systems/instr/ARK-5/pot/tuning</property>
    <factor>360.0</factor>
    <center>
      <x-m>0.148</x-m>
      <y-m>0.064</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>0.0</y>
      <z>-1</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>fdm/jsbsim/systems/instr/ARK-5/pot/tuning</property>
        <factor>0.0005</factor>
        <min>0.0</min>
        <max>1.0</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>


  <path>MiG-15bis-Radiocompassbox.ac</path> 

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>RC_FIGlass</object-name>
  </effect>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>RC_OGlass</object-name>
  </effect>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>RC_RGlass</object-name>
  </effect>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>RC_RIGlass</object-name>
  </effect>

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>30</max-m>
  </animation>

  <animation>
    <type>material</type>
    <object-name>RC_RINeedle</object-name>
    <object-name>RC_RIBackplate</object-name>
    <object-name>RC_FICPlate</object-name>
    <object-name>RC_FP150x310</object-name>
    <object-name>RC_FP310x640</object-name>
    <object-name>RC_FP640x1300</object-name>
    <object-name>RC_FBackplate</object-name>
    <emission>
      <factor-prop>fdm/jsbsim/systems/instr/ARK-5/lightsrc/gauge-light-norm</factor-prop>
      <red>0.222</red>
      <green>0.212</green>
      <blue>0.212</blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>RC_OGlass</object-name>
    <object-name>RC_OLamp</object-name>
    <emission>
      <factor-prop>fdm/jsbsim/systems/instr/ARK-5/light/on</factor-prop>
      <red>0.005</red>
      <green>0.222</green>
      <blue>0.005</blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>RC_RGlass</object-name>
    <object-name>RC_RLamp</object-name>
    <emission>
      <red>0.0</red>
      <green>0.0</green>
      <blue>0.0</blue>
    </emission>
  </animation>


  <animation>
    <type>rotate</type>
    <object-name>RC_RINeedle</object-name>
    <property>fdm/jsbsim/systems/instr/ARK-5/gauge/signal-quality-norm</property>
    <interpolation>
      <entry><ind>0</ind><dep>0</dep></entry>
      <entry><ind>1</ind><dep>83.3</dep></entry>
    </interpolation>
    <center>
      <x-m>0.056</x-m>
      <y-m>0.160</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>0.0</y>
      <z>-1.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>RC_TLTGSwitch</object-name>
    <property>fdm/jsbsim/systems/instr/ARK-5/switch/cw-ident</property>
    <interpolation>
      <entry><ind>0</ind><dep>45</dep></entry>
      <entry><ind>1</ind><dep>-45</dep></entry>
    </interpolation>
    <center>
      <x-m>0.059</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>1.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>RC_FVern</object-name>
    <property>fdm/jsbsim/systems/instr/ARK-5/pot/frame</property>
    <interpolation>
      <entry><ind>-1</ind><dep>-45</dep></entry>
      <entry><ind>1</ind><dep>45</dep></entry>
    </interpolation>
    <center>
      <x-m>0.131</x-m>
      <y-m>0.167</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>0.0</y>
      <z>-1.0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>fdm/jsbsim/systems/instr/ARK-5/pot/frame</property>
        <factor>0.5</factor>
        <min>-1.0</min>
        <max>1.0</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>RC_BVern</object-name>
    <property>fdm/jsbsim/systems/instr/ARK-5/pot/light</property>
    <factor>255.0</factor>
    <center>
      <x-m>0.027</x-m>
      <y-m>0.115</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>0.0</y>
      <z>-1.0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>fdm/jsbsim/systems/instr/ARK-5/pot/light</property>
        <factor>0.01</factor>
        <min>0.0</min>
        <max>1.0</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>RC_LVern</object-name>
    <property>fdm/jsbsim/systems/instr/ARK-5/pot/volume</property>
    <factor>255.0</factor>
    <center>
      <x-m>0.100</x-m>
      <y-m>0.115</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>0.0</y>
      <z>-1.0</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>fdm/jsbsim/systems/instr/ARK-5/pot/volume</property>
        <factor>0.02</factor>
        <min>0.0</min>
        <max>1.0</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>RC_TLTGSwitch</object-name>
    <object-name>RC_TG</object-name>
    <object-name>RC_TL</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>fdm/jsbsim/systems/instr/ARK-5/switch/cw-ident</property>
      </binding>
    </action>
    <action>
      <button>1</button>
      <binding>
        <command>property-toggle</command>
        <property>fdm/jsbsim/systems/instr/ARK-5/switch/cw-ident</property>
      </binding>
    </action>
  </animation>


  <animation>
    <type>knob</type>
    <object-name>TRM_Aileron</object-name>
    <object-name>TRM_ABolt</object-name>
    <property>controls/flight/aileron-trim</property>
    <interpolation>
      <entry><ind>-1</ind><dep>-36</dep></entry>
      <entry><ind>1</ind><dep>142</dep></entry>
    </interpolation>
    <center>
      <x-m>-0.032</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>0.0</y>
      <z>-1</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>controls/flight/aileron-trim</property>
        <factor>0.02</factor>
        <min>-1.0</min>
        <max>1.0</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>TRM_Elevator</object-name>
    <object-name>TRM_EBolt</object-name>
    <property>controls/flight/elevator-trim</property>
    <interpolation>
      <entry><ind>-1</ind><dep>-36</dep></entry>
      <entry><ind>1</ind><dep>142</dep></entry>
    </interpolation>
    <center>
      <x-m>0.032</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>0.0</y>
      <z>-1</z>
    </axis>
    <action>
      <binding>
        <command>property-adjust</command>
        <property>controls/flight/elevator-trim</property>
        <factor>0.02</factor>
        <min>-1.0</min>
        <max>1.0</max>
        <wrap>false</wrap>
      </binding>
    </action>
  </animation>
</PropertyList> 
